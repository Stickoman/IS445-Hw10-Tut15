<%- include("_header") -%>

<h1><%= book.id ? "Edit Book" : "Add Book" %></h1>

<form method="POST" action="<%= action %>">
    <div class="mb-3">
        <label class="form-label">Title</label>
        <input type="text" name="title" value="<%= book.title || '' %>" required class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">Author</label>
        <input type="text" name="author" value="<%= book.author || '' %>" required class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">Comments</label>
        <input type="text" name="comments" value="<%= book.comments || '' %>" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<%- include("_footer") -%>
