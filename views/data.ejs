<%- include("_header") -%>

<h1>Books List</h1>
<a href="/books/add" class="btn btn-success mb-3">Add New Book</a>

<table class="table table-striped">
    <thead class="thead-dark">
    <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Comments</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <% books.forEach(book => { %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.author %></td>
            <td><%= book.comments %></td>
            <td>
                <a href="/books/edit/<%= book.id %>" class="btn btn-primary btn-sm">Edit</a>
                <a href="/books/delete/<%= book.id %>" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
    <% }) %>
    </tbody>
</table>

<%- include("_footer") -%>
